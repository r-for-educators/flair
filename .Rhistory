~quietly(scope_and_run)(.x))
}
new_demo_code[is_src] <- new_demo_code[is_src] %>%
unlist() %>%
str_replace_all(fixed("\n"), "<br>")
attributes(new_demo_code) <- NULL
if (!shatter) {
.code_string <- str_replace_all(.code_string, fixed("\n"), "<br>")

new_demo_code <- quietly(evaluate::evaluate)(.code_string)$result
valid <- map_lgl(new_demo_code, ~ (class(.x) != "source") || str_detect(.x, "[^\\s]+"))
new_demo_code <- new_demo_code[valid]
is_src <- map(new_demo_code, class) == "source"
